<h2>ユーザーの検索</h2>

<p>名前・電話番号で検索が可能です</p>

<div>
  <%= form_tag(health_center_users_path, method: :get) do %>
    <%= text_field_tag :search %>
    <%= submit_tag "検索" %>
  <% end %>
</div>


<table class="table table-hover">
  <thead>
    <tr>
     <th></th>
     <th>名前</th>
     <th>性別</th>
     <th>年齢</th>
    </tr>
  </thead>

  <tbody>
     <% @users.each do |user| %>
     <tr>
      <td></td>
      <td><%= link_to user.full_name,health_center_user_path(user) %></td>
      <td><%= user.gender %></td>
      <td><%= user.age %></td>
     </tr>
     <% end %>
  </tbody>

