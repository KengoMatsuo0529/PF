<h2>ユーザーの検索</h2>

<p>名前・電話番号で検索が可能です</p>

<div>
  <%= form_tag(health_center_users_search_path, method: :get) do %>
    <%= text_field_tag :search %>
    <%= submit_tag "検索" %>
  <% end %>
</div>

<ul><% @users.each do |user| %>
  <li>
    <%= user.full_name %>
  </li>
<% end %></ul>


<table class="table table-hover table-inverse">
  <thead>
    <tr>
     <th></th>
     <th>名前</th>
    </tr>
  </thead>

  <tbody>
     <% @users.each do |user| %>
     <tr>
      <td>
      </td>
      <td><%= user.first_name %></td>
     </tr>
     <% end %>
  </tbody>
