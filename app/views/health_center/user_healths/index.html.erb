<div class="container">
  <div class="row mx-auto my-4">
    <h2 class="title">送信された健康状態一覧</h2>
  </div>

<div class="container center-contents pt-3">
  <div class="row my-5 pt-2">
    <div class="datagrid mx-auto">
      <table>
        <thead>
          <tr>
           <th>名前</th>
           <th>送信された日</th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <td colspan="4">
              <div class="paging pl-2">
                <%= paginate @user_healths %>
              </div>
            </td>
          </tr>
        </tfoot>
        <tbody>
          <% @user_healths.each do |user_health| %>
          <tr>
          <td><%= link_to user_health.user.last_name + user_health.user.first_name, health_center_user_health_path(user_health) %></td>
          <td><%= user_health.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>