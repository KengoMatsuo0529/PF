<div class="container">
  <div class="row mx-auto my-4">
    <h2 class="title">検査所の検索</h2>
  </div>
    <p>名前・市区町村で検索が可能です</p>

<div class="container center-contents pt-2">
  <div class="row my-5 ml-5">
    <%= form_tag(health_center_examinations_path, method: :get) do %>
      <%= text_field_tag :search, '',  placeholder: "タナカ" %>
      <%= submit_tag "検索" %>
    <% end %>
  </div>
  <div class="datagrid mx-auto">
    <table>
      <thead>
        <tr>
         <th>名前</th>
         <th>住所</th>
         <th>休日</th>
        </tr>
      </thead>
      <tfoot>
        <tr>
          <td colspan="4">
            <div id="paging">
              <ul>
                <li><a href="#"><span>Previous</span></a></li>
                <li><a href="#" class="active"><span>1</span></a></li>
                <li><a href="#"><span>2</span></a></li>
                <li><a href="#"><span>3</span></a></li>
                <li><a href="#"><span>4</span></a></li>
                <li><a href="#"><span>5</span></a></li>
                <li><a href="#"><span>Next</span></a></li>
              </ul>
            </div>
          </td>
        </tr>
      </tfoot>
      <tbody>
       <% @hospitals.each do |hospital| %>
        <tr>
          <td><%#= link_to hospital.name,health_center_hospital_path(hospital) %></td>
          <td><%= hospital.address_city + hospital.address_street %></td>
          <td><%#= hospital.holiday %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>
