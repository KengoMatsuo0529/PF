<div class="container">
  <div class="row mx-auto my-4">
    <h2 class="title">検査所の詳細</h2>
  </div>
  <p><%= t :you_can_chats %></p>

<div class="container center-contents pt-3">
  <div class="row my-5 pt-3">
    <table class="table table-hover show-list">
      <tr>
        <th></th>
        <td><%= @hospital.name %></td>
      </tr>
      <tr>
        <th><%= t :address %></th>
        <td><%= @hospital.address_city + @hospital.address_street %></td>
      </tr>
      <tr>
        <th><%= t :holiday %></th>
        <td><%= @hospital.holiday %></td>
      </tr>
    </table>
  </div>

  <div class="d-flex justify-content-end pr-5">
    <%= link_to user_chat_room_path(@hospital), class:"chat-button" do %><%= t :lets_chat %><% end %>
  </div>
</div>
</div>
