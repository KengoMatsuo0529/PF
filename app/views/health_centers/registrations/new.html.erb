<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "health_centers/shared/error_messages", resource: resource %>
  
   <div class="field">
    <%= f.label :name,"保健所名" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
  
  <div class="field">
    <%= f.label :phone_number,"連絡先" %><br />
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>
  
  <div class="field">
    <%= f.label :postcode,"郵便番号" %><br />
    <%= f.text_field :postcode, autofocus: true, autocomplete: "post_code" %>
  </div>

  <div class="field">
    <%= f.label :address_city,"都道府県" %><br />
    <%= f.text_field :address_city, autofocus: true, autocomplete: "address_city" %>
  </div>

  <div class="field">
    <%= f.label :address_street,"市区町村" %><br />
    <%= f.text_field :address_street, autofocus: true, autocomplete: "address_street" %>
  </div>

  <div class="field">
    <%= f.label :address_building,"番地" %><br />
    <%= f.text_field :address_building, autofocus: true, autocomplete: "address_building" %>
  </div>
  
  <div class="field">
    <%= f.label :holiday, "定休日" %><br />
    <%= f.text_field :holiday, autofocus: true, autocomplete: "holiday" %>
  </div>
  
  <div class="field">
    <%= f.label :corporate_number,"法人番号" %><br />
    <%= f.text_field :corporate_number, autofocus: true, autocomplete: "corporate_number" %>
  </div>
  
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "health_centers/shared/links" %>
