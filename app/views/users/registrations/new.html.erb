<div class="container">
  <div class="row mx-auto my-4">
    <h2 class="title"><%= t :sign_up %></h2>
  </div>

<div class="container  user-signin-contents pt-2">
  <div class="row my-5 ml-5">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :last_name,"#{ t :last_name }" %><br />
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder:"#{ t :tanaka }" %>
      </div>
      <div class="field mt-3">
        <%= f.label :first_name, "#{ t :first_name }" %><br />
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder:"#{ t :tarou }" %>
      </div>
      <div class="field mt-3">
        <%= f.label :last_name_kana,"#{ t :last_name_kana }" %><br />
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder:"#{ t :tanaka_kana }" %>
      </div>
      <div class="field mt-3">
        <%= f.label :first_name_kana,"#{ t :first_name_kana }" %><br />
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder:"#{ t :tarou_kana }" %>
      </div>
      <div class="field mt-3">
        <%= f.radio_button :gender, :man %>
        <%= f.label :gender, "#{ t :male }", {value: :man, style: "display: inline-block;"} %>
        <%= f.radio_button :gender, :woman %>
        <%= f.label :gender, "#{ t :female }", {value: :woman, style: "display: inline-block;"} %>
      </div>
      <div class="field mt-3">
        <%= f.label :age,"#{ t :age }" %><br />
        <%= f.text_field :age, autofocus: true, autocomplete: "age", placeholder:"27" %>
      </div>
      <div class="field mt-3">
        <%= f.label :email,"#{ t :email}" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"tarou@nanaka.com" %>
      </div>
      <div class="field mt-3">
        <%= f.label :postcode,"#{ t :postcode }" %><br />
        <%= f.text_field :postcode, autofocus: true, autocomplete: "post_code", placeholder:"1500042" %>
      </div>
      <div class="field mt-3">
        <%= f.label :address_city,"#{ t :address_city }" %><br />
        <%= f.text_field :address_city, autofocus: true, autocomplete: "address_city", placeholder:"#{t :tokyo }" %>
      </div>
      <div class="field mt-3">
        <%= f.label :address_street,"#{ t :address_street }" %><br />
        <%= f.text_field :address_street, autofocus: true, autocomplete: "address_street", placeholder:"#{t :shibuya}" %>
      </div>
      <div class="field mt-3">
        <%= f.label :address_building,"#{ t :address_building }" %><br />
        <%= f.text_field :address_building, autofocus: true, autocomplete: "address_building", placeholder:"#{t :udagawa}" %>
      </div>
      <div class="field mt-3">
        <%= f.label :phone_number,"#{ t :phone }" %><br />
        <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder:"0334631211" %>
      </div>
      <div class="field mt-3">
        <%= f.label :password,"#{ t :password }" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> <%= t :character %>)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
      <div class="field mt-3">
        <%= f.label :password_confirmation,"#{ t :conf_pass }" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      <div class="actions mt-3">
        <%= f.submit "#{ t :sign_up }" %>
      </div>
    <% end %>
  </div>
    <div class="ml-4 signin-link">
      <%= t :if_signuped %> <%= link_to new_session_path(resource_name) do %><%= t :people_signup %><% end %><br />
    </div>
</div>
</div>