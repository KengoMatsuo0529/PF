<div class="container">
  <div class="row mx-auto my-4">
    <h2 class="title">新規登録</h2>
  </div>

<div class="container  user-signin-contents pt-2">
  <div class="row my-5 ml-5">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :last_name,"名前(苗字)" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder:"田中" %>

  </div>

  <div class="field mt-3">
    <%= f.label :first_name,"名前(名前)" %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder:"太郎" %>
  </div>

  <div class="field mt-3">
    <%= f.label :last_name_kana,"フリガナ(苗字)" %><br />
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder:"タナカ" %>
  </div>
  <div class="field mt-3">
    <%= f.label :first_name_kana,"フリガナ(名前)" %><br />
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder:"タロウ" %>
  </div>

  <div class="field mt-3">
    <%= f.radio_button :gender, :male %>
    <%= f.label :gender, "男性", {value: :male, style: "display: inline-block;"} %>
    <%= f.radio_button :gender, :female %>
    <%= f.label :gender, "女性", {value: :female, style: "display: inline-block;"} %>
  </div>

  <div class="field mt-3">
    <%= f.label :age,"ご年齢" %><br />
    <%= f.text_field :age, autofocus: true, autocomplete: "age", placeholder:"27" %>
  </div>

  <div class="field mt-3">
    <%= f.label :email,"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"tarou@nanaka.com" %>
  </div>

  <div class="field mt-3">
    <%= f.label :postcode,"郵便番号(ハイフンなし)" %><br />
    <%= f.text_field :postcode, autofocus: true, autocomplete: "post_code", placeholder:"1500042" %>
  </div>

  <div class="field mt-3">
    <%= f.label :address_city,"都道府県" %><br />
    <%= f.text_field :address_city, autofocus: true, autocomplete: "address_city", placeholder:"東京都" %>
  </div>

  <div class="field mt-3">
    <%= f.label :address_street,"市区町村" %><br />
    <%= f.text_field :address_street, autofocus: true, autocomplete: "address_street", placeholder:"渋谷区" %>
  </div>

  <div class="field mt-3">
    <%= f.label :address_building,"番地" %><br />
    <%= f.text_field :address_building, autofocus: true, autocomplete: "address_building", placeholder:"宇田川町１−１" %>
  </div>

  <div class="field mt-3">
    <%= f.label :phone_number,"連絡先(ハイフンなし)" %><br />
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder:"0334631211" %>
  </div>

  <div class="field mt-3">
    <%= f.label :password,"パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field mt-3">
    <%= f.label :password_confirmation,"パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions mt-3">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

</div>
  <div class="ml-4">
    ご登録がお済みの方は <%= link_to "こちら", new_session_path(resource_name) %><br />
  </div>

</div>
</div>