<!DOCTYPE html>
<html>
  <head>
    <title>HealthLink</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

      <meta name ="viewport" content="width=device-width,initial-scale=1.0">
      <script src="https://kit.fontawesome.com/a06a79ce1c.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

  <div class="wrapper">
    <header>
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container header-all">
          <a class="navbar-brand p-4 icon" href="/">Health  Link</a>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= check_user_notification == true ? "既読" : "未読" %>
                <%= link_to '保健所の検索・問い合わせ', user_health_centers_path, class: 'nav-link text-white' %>
              </li>
              <li class="nav-item">
                <%= link_to "マイページ", user_user_path(current_user), class: 'nav-link text-white' %>
              </li>
              <li class="nav-item">
                <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'nav-link text-white' %>
              </li>
            <% elsif health_center_signed_in? %>
              <li class="nav-item">
                <%= link_to "ユーザーの検索", health_center_users_path, class: 'nav-link text-white' %>
              </li>
              <li class="nav-item">
                  <%= check_health_center_notification == true ? "既読" : "未読" %>
                <%= link_to 'チャット一覧', health_center_chat_rooms_path, class: "nav-link text-white" %>
              </li>
              <li class="nav-item">
                <%= link_to 'ログアウト', destroy_health_center_session_path, method: :delete, class: 'nav-link text-white' %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Home", root_path, class: 'nav-link text-white' %>
              </li>
              <li class="nav-item">
                <%= link_to "個人のログイン", new_user_session_path, class: 'nav-link text-white' %>
              </li>
              <li class="nav-item">
                <%= link_to "保健所のログイン", new_health_center_session_path, class: 'nav-link text-white' %>
              </li>
            <% end %>

            </ul>
          </div>
        </div>
      </nav>
    </header>

    <div class="container">
      <%= yield %>
    </div>
    <footer class="footer">
      <div class="container">
        <!--<ul class="footer-menu text-white">-->
        <!-- <li>個人ログイン ｜</li>-->
        <!-- <li>保健所ログイン ｜</li>-->
        <!-- <li>検査所ログイン ｜</li>-->
        <!--</ul>-->
        <div class="text-white">
          <p>©health_link</p>
        </div>
      </div>
    </footer>
  </div>
  </body>
</html>
