<div>
  <h2>健康状態の報告</h2>
</div>

<form>
  <div class="form_group">
    <%= form_with model:@user_health, local:true do |f| %>
    
    <%= f.label :temperature, "現在の熱" %>
    <%= f.text_field :temperature, class: "form-control" %>
    
    <%= f.label :condition, "現在の体調" %>
    <%= f.text_field :condition, class: "form-control" %>

    <%= f.label :transportation, "交通手段" %>
    <%= f.text_field :transportation, class: "form-control" %>

    <%= f.label :want_examination, "PCR検査を希望しますか？" %>
    <%= f.text_field :want_examination, class: "form-control" %>
    
    <%= f.submit "確認", class: "btn btn-primary" %>

    <% end %>
  </div>
</form>