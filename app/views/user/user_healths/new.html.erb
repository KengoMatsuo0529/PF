<div>
  <h2>健康状態の報告</h2>
</div>

<form>
  <div class="form_group">
    <%= form_with model:@user_health, local:true do |f| %>
    
    <%= f.label :first_name, "名前" %>
    <%= f.text_field :first_name %>
    
    <%= f.label :last_name, "名前" %>
    <%= f.text_field :last_name %>
  
    <%= f.label :first_name_kana, "フリガナ" %>
    <%= f.text_field :first_name_kana %>
    
    <%= f.label :last_name_kana, "フリガナ" %>
    <%= f.text_field :last_name_kana %>
  
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email %>
  
    <%= f.label :phone_number, "電話番号" %>
    <%= f.text_field :phone_number %>
  
    <%= f.label :age, "年齢" %>
    <%= f.text_field :age %>
    
    <%= f.label :condition, "現在の体調" %>
    <%= f.text_field :condition %>
    
    <% end %>
  </div>
</form>

<form>
  <div class="form-group">
    <label for="exampleInputName1">名前</label>
    <input type="name" class="form-control" id="exampleInputName1" aria-describedby="nameHelp" placeholder="田中">
    <small id="nameHelp" class="form-text text-muted">名前を入力してください</small>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
  </div>
  
  <button type="submit" class="btn btn-primary">Submit</button>
</form>