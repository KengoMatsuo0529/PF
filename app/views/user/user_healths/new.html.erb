<div class="container">
  <div class="row mx-auto my-4">
    <h2 class="title">健康状態の報告</h2>
  </div>

    <% if @user_health.errors.any? %>
     <p class="validates-errors">入力に誤りがあります</p>
    <% end %>

    <div class="container center-contents pt-5">
      <div class="form my-2">
        <%= form_with url: user_user_healths_confirm_path, method: :post, local:true do |f| %>
          <div class="form-group px-5">
            <%= f.label :temperature, "現在の熱" %>
            <%= f.text_field :temperature, class: "form-control", placeholder: "36.5" %>
          </div>
          <div class="form-group px-5">
            <%= f.label :condition, "現在の体調" %>
            <%= f.text_field :condition, class: "form-control", placeholder: "頭痛・咳　症状がなければ特になしと記載ください" %>
          </div>
          <div class="form-group px-5">
            <%= f.label :transportation, "交通手段" %>
            <%= f.text_field :transportation, class: "form-control", placeholder: "自転車　公共交通機関以外の交通手段を記載ください" %>
          </div>
          <div class = "form-group row px-5">
            <%= f.label :want_examination, "PCR検査を希望しますか？", class: "col-3" %>
            <%= f.select :want_examination, [['希望する',1],['希望しない',0]] %>
          </div>
          <div class="d-flex justify-content-end pr-5">
            <%= f.submit "確認画面へ進む", class: "confirm-button" %>
        <% end %>
          </div>
      </div>
    </div>
</div>