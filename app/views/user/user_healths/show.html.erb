<div class="container">
  <div class="row mx-auto my-4">
    <h2 class="title"><%= t :my_condition %></h2>
  </div>

<div class="container center-contents pt-3">
  <div class="row my-5 pt-3">
    <table class="table table-hover show-list">
      <tr>
        <th><%= t :fever %></th>
        <td><%= @user_health.temperature %></td>
      </tr>
      <tr>
        <th><%= t :health_condition %></th>
        <td><%= @user_health.condition %></td>
      </tr>
      <tr>
        <th><%= t :transportation %></th>
        <td><%= @user_health.transportation %></td>
      </tr>
      <tr>
        <th><%= t :want_examination %></th>
        <td><%= @user_health.want_examination ? "希望する" : "希望しない" %></td>
      </tr>
      <tr>
        <th><%= t :sent_day %></th>
        <td><%= @user_health.created_at.strftime('%Y/%m/%d %H:%M') %></td>

      </tr>
    </table>
  </div>
</div>
</div>
