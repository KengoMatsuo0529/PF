<div class="container">
  <div class="row mx-auto my-4">
    <h2 class="title"><%= t :search_healthcenter %></h2>
  </div>
  <p><%= t :search_message %></p>

<div class="container center-contents pt-2">
  <div class="row my-5 ml-5">
    <%= form_tag(user_health_centers_path, method: :get) do %>
      <%= text_field_tag :search, '',  placeholder: "#{t :shibuya}" %>
      <%= submit_tag "#{ t :search }" %>
    <% end %>
  </div>
  <div class="datagrid mx-auto">
    <table>
      <thead>
        <tr>
         <th><%= t :health_center_name %></th>
         <th><%= t :address %></th>
        </tr>
      </thead>
      <tfoot>
        <tr>
          <td colspan="12">
            <div class="paging pl-2">
              <%= paginate @health_centers %>
            </div>
          </td>
        </tr>
      </tfoot>
      <tbody>
       <% @health_centers.each do |health_center| %>
        <tr>
        <td><%= link_to health_center.name,user_health_center_path(health_center.id), class: "health_center_#{health_center.id}" %></td>
        <td><%= health_center.address_city + health_center.address_street %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>