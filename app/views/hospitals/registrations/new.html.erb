<div class="container">
  <div class="row mx-auto my-4">
    <h2 class="title">検査所の新規登録</h2>
  </div>

<div class="container signin-contents-exam pt-2">
  <div class="row my-5 ml-5">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "hospitals/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field mt-3">
    <%= f.label :password, "パスワード(6文字以上)" %>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  <div class="field mt-3">
    <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="actions mt-3">
    <%= f.submit "新規登録" %>
  </div>
<% end %>
</div>

  <div class="ml-4">
    ご登録がお済みの方は<%= link_to "こちら", new_session_path(resource_name) %>
  </div>

</div>
</div>
</div>