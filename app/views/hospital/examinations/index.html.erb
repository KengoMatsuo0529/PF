<div class="container">
  <div class="row mx-auto my-4">
    <h2 class="title">検査結果一覧</h2>
  </div>

<div class="container center-contents pt-3">
  <div class="row my-5 pt-2">
    <div class="datagrid mx-auto">
      <table>
        <thead>
          <tr>
           <th>被検者氏名</th>
           <th>送信された日</th>
           <th>検査結果</th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <td colspan="4">
              <div id="paging">
                <ul>
                  <li><a href="#"><span>Previous</span></a></li>
                  <li><a href="#" class="active"><span>1</span></a></li>
                  <li><a href="#"><span>2</span></a></li>
                  <li><a href="#"><span>3</span></a></li>
                  <li><a href="#"><span>4</span></a></li>
                  <li><a href="#"><span>5</span></a></li>
                  <li><a href="#"><span>Next</span></a></li>
                </ul>
              </div>
            </td>
          </tr>
        </tfoot>
        <tbody>
          <% @examinations.each do |examination| %>
          <tr>
          <td><%= link_to examination.user.last_name + examination.user.first_name, hospital_examination_path(examination) %></td>
          <td><%= examination.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
          <td><%= examination.result %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>